@import "../../static/fonts/iconfont.wxss";

button{
  width: 690rpx;
  margin: 50rpx 0 50rpx 30rpx;
  background-color: #ff5b5a;
  color: #fff;
}
.button-hover{
  background-color: #ff7271;
  color: #fff;
}
button text{
  padding: 0 10rpx;
}
.yuyuelist{
  position: relative;
  width: 100%;
  height: 120rpx;
  border-bottom: 2rpx solid #eee;
}
.yuyuelist .time{
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  font-size: 32rpx;
  color: #333;
}
.yuyuelist .con{
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  font-size: 26rpx;
  color: #666;
}