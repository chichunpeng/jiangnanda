@import "../../../static/fonts/iconfont.wxss";
@import "../../../static/wxss/public.wxss";
.yuyue{
  width: 100%;
}
.yuyue .yuyue_li{
  position: relative;
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #eee;
}
.yuyue .yuyue_li text,
.yuyue .remark text{
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  font-size: 30rpx;
  color: #333;
}
.yuyue .yuyue_li input{
  position: absolute;
  top: 20rpx;
  left: 170rpx;
  height: 50rpx;
  width: 450rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
}
.yuyue .remark{
  position: relative;
  width: 100%;
  height: 250rpx;
}
.yuyue .remark textarea{
  position: absolute;
  top: 30rpx;
  left: 190rpx;
  height: 200rpx;
  width: 520rpx;
  font-size: 30rpx;
  border: 2rpx solid #eee;
}
.content{
  width: 100%;
}
.content .tit{
  width: 100%;
  height: 65rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 65rpx;
  background-color: #ff5b5a;
  text-align: center;
}
.price{
  width: 100%;
}
.price_li{
  display: inline-block;
  width: 33%;
  border-right: 2rpx solid #eee;
}
.price_li:last-child{
  border: none;
}
.price_li text{
  display: block;
  font-size: 30rpx;
  color: #333;
  line-height: 75rpx;
  text-align: center;
}
.content .imgBox{
  position: relative;
  width: 100%;
  height: 420rpx;
}
.content .imgBox image{
  width: 100%;
  height: 100%;
}
.content .callBtn{
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  width: 130rpx;
  height: 45rpx;
  font-size: 22rpx;
  line-height: 45rpx;
  text-align: center;
  background-color: #ff5b5a;
  color: #fff;
  border-radius: 6rpx;
}
.prompt{
  width: 720rpx;
  padding-left: 30rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #333;
  border-bottom: 2rpx solid #eee;
}
.prompt_li{
  display: block;
  font-size: 24rpx;
  color: #333;
  line-height: 54rpx;
  text-indent: 30rpx;
}
.dot{
  margin-right: 20rpx;
}
.bot{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
}
.bot .txt{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 66%;
  font-size: 30rpx;
  color: #ff5b5a;
  background-color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-top: 2rpx solid #eee;
}
.bot button{
  position: absolute;
  top: 0;
  right: 0;
  width: 34%;
  height: 100%;
  font-size: 30rpx;
  background-color: #ff5b5a;
  color: #fff;
  line-height: 80rpx;
  border-radius: 0;
}