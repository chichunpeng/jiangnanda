.bg{
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #eee;
}
.box{
  position: absolute;
  top: 50rpx;
  left: 0;
  width: 100%;
  height: 550rpx;
  background-color: #fff;
}
.box .comName{
  position: absolute;
  top: 0;
  left: 60rpx;
  width: 630rpx;
  height: 70rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 70rpx;
  text-align: center;
  border-bottom: 2rpx solid #eee;
}
.box image{
  position: absolute;
  top: 100rpx;
  left: 210rpx;
  width: 300rpx;
  height: 300rpx;
}
.box button{
  position: absolute;
  left: 60rpx;
  bottom: 40rpx;
  width: 630rpx;
  background-color: #ff5b5a;
  color: #fff;
}